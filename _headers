# GitHub Pages Custom Headers для улучшенной безопасности

/*
  # Content Security Policy с полной поддержкой всех директив
  Content-Security-Policy: default-src 'self'; script-src 'self' https://telegram.org https://unpkg.com https://cdnjs.cloudflare.com https://cdn.interactjs.io; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://raw.githubusercontent.com https://oshu-vacancies.github.io https://github.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co; media-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self' https://web.telegram.org https://telegram.org; upgrade-insecure-requests; block-all-mixed-content

  # Дополнительные заголовки безопасности
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Принудительное использование HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Кэширование для статических ресурсов
  Cache-Control: public, max-age=3600

# Специальные настройки для JavaScript файлов (включая bundled)
/src/js/*
  Cache-Control: public, max-age=86400
  Content-Type: application/javascript

/js/*
  Cache-Control: public, max-age=31536000
  Content-Type: application/javascript

# Специальные настройки для CSS файлов (включая bundled)
/src/css/*
  Cache-Control: public, max-age=86400
  Content-Type: text/css

/assets/*
  Cache-Control: public, max-age=31536000

# HTML файлы - короткое кэширование
/*.html
  Cache-Control: public, max-age=300